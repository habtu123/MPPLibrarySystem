<!-- fx:controller="fxmlexample.FXMLExampleController"  -->
<BorderPane fx:controller="ui.controller.AdminSideBarController" xmlns:fx="http://javafx.com/fxml" fx:id="contentBars">
    <top>
        <BorderPane styleClass="header-section">
            <left>
                <Label id="headerText" text="Library System"></Label>
            </left>
            <right>
           		  <Button id="account" text="Log out" onAction="#handleLogoutButtonAction">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24" 
                            pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@javafx_account_example.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </right>
            <center>
            	 <Label id="userDisplay" text=""></Label>
            </center>
            
        </BorderPane>
    </top>
    <left>
        <VBox styleClass="sidebar-section" id="both" >
            <children>
                <Button text="Add New Member" styleClass="sidebar-button" id="addNewMemeberBoth" ></Button>
                <Button text="Add A Copy"  styleClass="sidebar-button" id="addCopyBoth" ></Button>
                <Button text="Checkout Book"  styleClass="sidebar-button" id="checkoutBookBoth" ></Button>
               
            </children>
        </VBox>
        
          <VBox styleClass="sidebar-section" id="lib">
            <children>
                <Button text="Checkout Book" styleClass="sidebar-button" id="checkout-book" ></Button>
            </children>
             </VBox>
            <VBox styleClass="sidebar-section" id="admin">
            <children>
                <Button text="Add New Member" styleClass="sidebar-button" id="addNewMemeber" onAction="#addNewMemeberAction"></Button>
                <Button text="Add A Copy" styleClass="sidebar-button" id="addBookCopy" onAction="#addNewCopyAction"></Button>
            </children>
        </VBox>
    </left>
    <center>
        
    </center>
    <bottom>
        <HBox id="footer-section">
            <children>
                <Label text="Copyright 2017 CalliCoder"></Label>
            </children>
        </HBox>
    </bottom>
    <stylesheets>
		    <URL value="@style/library.css" />
		</stylesheets>
</BorderPane>