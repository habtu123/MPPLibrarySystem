<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.cell.*?> 
<?import javafx.collections.*?> 
<?import fxmltableview.*?> 
<!-- fx:controller="fxmlexample.FXMLExampleController" -->
<GridPane fx:id="paneBookScreen" fx:controller="ui.controller.BookController"
	styleClass="page" xmlns:fx="http://javafx.com/fxml" alignment="center"
	hgap="20" vgap="10">
	<padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
     <!--    
     ISBN, title, authors, maximum checkout length,
number of copies)
      -->
		<Text text="Book Data" GridPane.columnIndex="0"
			GridPane.rowIndex="0" GridPane.columnSpan="1" />
		<Label text="ISBN:"
	        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
	 
	    <TextField fx:id="isbnTxt" 
	        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	 
	    <Label text="Title:"
	        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
	 
	    <TextField fx:id="titleTxt"
	        GridPane.columnIndex="1" GridPane.rowIndex="3"/>
	        
	    <Label text="Checkout Lenth:"
	        GridPane.columnIndex="0" GridPane.rowIndex="5"/>
	 
	    <TextField fx:id="checkoutTxt" 
	        GridPane.columnIndex="1" GridPane.rowIndex="5"/>
	        
	    <Label text="Num. Copies:"
	        GridPane.columnIndex="0" GridPane.rowIndex="6"/>
	 
	    <TextField fx:id="copiesTxt" 
	        GridPane.columnIndex="1" GridPane.rowIndex="6"/>
	        
	     <Label text="Authors:"
	        GridPane.columnIndex="0" GridPane.rowIndex="7"/>
	        
	      <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" 
          GridPane.rowIndex="7">
          <TextField fx:id="firstNameField" promptText="First Name"
               prefWidth="90"/>
          <TextField fx:id="lastNameField" promptText="Last Name"
               prefWidth="90"/>
          <TextField fx:id="phoneField" promptText="phone"
               prefWidth="90"/>
          <TextField fx:id="bioField" promptText="bio"
               prefWidth="150"/>
          <Button text="Add" onAction="#addAuthors"/>
     </HBox>
	        
	    <TableView fx:id="authorsTable" GridPane.columnIndex="1" 
	        GridPane.rowIndex="8">
	        <columns>
	          <TableColumn text="First Name">
	          	<cellValueFactory><PropertyValueFactory property="firstName" />
		        	</cellValueFactory>
		        </TableColumn>
	          <TableColumn text="Last Name">
	          		<cellValueFactory><PropertyValueFactory property="lastName" />
		        	</cellValueFactory>
		        </TableColumn>
	          <TableColumn text="Phone">
	          	<cellValueFactory><PropertyValueFactory property="telephone" />
		        	</cellValueFactory>
		        </TableColumn>
	          <TableColumn text="Bio">
	          	<cellValueFactory><PropertyValueFactory property="bio" />
		        	</cellValueFactory>
		        </TableColumn>
     </columns>  
	    </TableView>
	        
		
    <HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="2" GridPane.rowIndex="9">
        <Button text="Submit" styleClass="btn btn-primary"    
        onAction="#handleAddBook"
        />
	</HBox>

<HBox spacing="10"
        GridPane.columnIndex="2" GridPane.rowIndex="10">
		<Label  GridPane.columnIndex="0" GridPane.rowIndex="9" fx:id="actiontarget"/>
	</HBox>
		
		  <stylesheets>
		    <URL value="@style/library.css" />
	</stylesheets>
	 <stylesheets>
		    <URL value="@style/bootstrapfx.css" />
	</stylesheets>
</GridPane>