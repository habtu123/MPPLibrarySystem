    <top>
        <BorderPane styleClass="header-section">
            <left>
                <Label id="header-text" text="Library System"></Label>
            </left>
            <right>
                <Button id="account" text="Log out"  onAction="#handleLogoutButtonAction">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24" 
                            pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@javafx_account_example.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </right>
        </BorderPane>
    </top>
    <left>
        <VBox styleClass="sidebar-section" id="both" >
            <children>
                <Button text="Add New Memeber" styleClass="sidebar-button" id="addNewMemeberBoth" ></Button>
